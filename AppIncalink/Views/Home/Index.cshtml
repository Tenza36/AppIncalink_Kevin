@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Sistema de Gestión </h1>
   
</div>

<div class="container">
    <!-- Primera Sección -->
    <section class="my-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body"> 
                        <a asp-action="Listar" asp-controller="grupo" class="btn btn-success"><i class="icon ion-md-basket mr-2 lead"></i>Listado de Compras</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        
                        <a asp-action="Calendario" asp-controller="calendario" class="btn btn-success"><i class="icon ion-md-calendar mr-2 lead"></i>Calendario</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Segunda Sección -->
    <section class="my-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        
                        <a asp-action="Listar" asp-controller="Menu" class="btn btn-warning"><i class="icon ion-md-pizza mr-2 lead"></i>Crear Menú</a>
                        
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">

                        <a href="https://incalinkecuador.org" class="btn btn-warning" target="_blank"><i class="icon ion-md-globe mr-2 lead"></i>Sitio Web</a>

                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
