@model List<nombreActividadesModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a asp-action="Guardar" asp-controller="actividad" class="btn btn-success">Crear Actividad</a>

</hr>


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Grupo</th>
                <th scope="col">Fecha de Inicio</th>
                <th scope="col">Fecha Final</th>
                <th scope="col">Recursos</th>
                <th scope="col">Responsable</th>
                <th scope="col">Lugar Desde</th>
                <th scope="col">Lugar Hacia</th>
                <th scope="col">Observaciones</th>
                <th scope="col">Tipo Actividad</th>
                <th scope="col">Menu</th>
                <th scope="col">Vehiculo</th>
                <th>Ver Detalle</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(a => a.fechaInicio))
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.nombreGrupo</td>
                    <td>@item.fechaInicio</td>
                    <td>@item.fechaFin</td>
                    <td>@item.recursos</td>
                    <td>@item.responsables</td>
                    <td>@item.lugarDesde</td>
                    <td>@item.LugarHacia</td>
                    <td>@item.observaciones</td>
                    <td>@item.nombreTipoActividad</td>
                    <td>@item.nombreMenu</td>
                    <td>@item.nombreVehiculo</td>
                    <td>
                        <a asp-action="ListarActividad" asp-controller="actividad" asp-route-idGrupo="@item.id" asp-route-idPersona="@item.id">Ver Detalles</a>
                    </td>
                    <td>
                        <a asp-action="Editar" asp-controller="actividad" class="btn btn-primary btn-sm" asp-route-id="@item.id">Editar</a>
                    </td>
                    <td>
                        <a asp-action="Eliminar" asp-controller="actividad" class="btn btn-danger btn-sm" asp-route-id="@item.id">Eliminar</a>
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
