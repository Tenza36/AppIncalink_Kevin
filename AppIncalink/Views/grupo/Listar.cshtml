@model List<grupoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section>
    <div class="container">

        <div class="row">
            <div class="col">
                <td>
                    <a asp-action="Guardar" asp-controller="grupo" class="btn btn-success"><i class="icon ion-md-people mr-2 lead"></i> Crear Grupo</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="persona" class="btn btn-warning"><i class="icon ion-md-person mr-2 lead"></i> Crear Persona</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="actividad" class="btn btn-info"><i class="icon ion-logo-dribbble mr-2 lead"></i> Crear Actividad</a>
                </td>
            </div>
        </div>
    </div>
</section>

<br />


<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th scope="col">Nombre</th>
                <th scope="col">Fecha de Llegada</th>
                <th scope="col">Fecha de Salida</th>
                <th scope="col">Informacion del Vuelo</th>
                <th scope="col">Itinerario del Vuelo</th>
                <th scope="col">Observaciones</th>
                <th>Ver Compras</th>
                <th>Ver Detalles</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.fechaLlegada</td>
                    <td>@item.fechaSalida</td>
                    <td>@item.informacionVuelo</td>
                    <td>@item.intinerarioVuelo</td>
                    <td>@item.observaciones</td>
                    <td>
                        <a asp-action="ListarCompras" asp-controller="grupo" class="btn btn-warning" asp-route-idGrupo="@item.id" asp-route-idPersona="@item.id"><i class="icon ion-md-basket mr-2 lead"></i></a>
                    </td>
                    <td>
                        <a asp-action="ListarPersonas" asp-controller="grupo" asp-route-idGrupo="@item.id" asp-route-idPersona="@item.id">Ver Detalles</a>
                    </td>
                    <td>
                        <a asp-action="Editar" asp-controller="grupo" class="btn btn-primary btn-sm" asp-route-id="@item.id">Editar</a>
                    </td>
                    <td>
                        <a asp-action="Eliminar" asp-controller="grupo" class="btn btn-danger btn-sm" asp-route-id="@item.id">Eliminar</a>
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>


</div>


