@model List<grupoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section>
    <div class="container">
        <div class="row">
            <div class="col">
                <td>
                    <a asp-action="Guardar" asp-controller="grupo" class="btn btn-success"><i class="icon ion-md-people mr-2 lead"></i> Crear Grupo</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="persona" class="btn btn-warning"><i class="icon ion-md-person mr-2 lead"></i> Crear Persona</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="actividad" class="btn btn-info"><i class="icon ion-logo-dribbble mr-2 lead"></i> Crear Actividad</a>
                </td>
            </div>
        </div>
    </div>
</section>

<br />

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Fecha de Llegada</th>
                <th scope="col">Fecha de Salida</th>
                <th scope="col">Informacion del Vuelo</th>
                <th scope="col">Itinerario del Vuelo</th>
                <th scope="col">Observaciones</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nombre</td>
                    <td>@item.fechaLlegada</td>
                    <td>@item.fechaSalida</td>
                    <td>@item.informacionVuelo</td>
                    <td>@item.intinerarioVuelo</td>
                    <td>@item.observaciones</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.id" class="btn btn-primary">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                        <a asp-action="ListarPersonas" asp-route-idGrupo="@item.id" class="btn btn-warning">Ver Personas</a>
                        <a asp-action="ListarCompras" asp-route-idGrupo="@item.id" class="btn btn-secondary">Ver Compras</a>
                        <a asp-action="ListarMenus" asp-route-idGrupo="@item.id" class="btn btn-info">Ver Menús</a>
                        <a asp-action="ListarTiposActividad" asp-route-idGrupo="@item.id" class="btn btn-success">Ver Tipos de Actividad</a>
                        <a asp-action="ListarVehiculo" asp-route-idGrupo="@item.id" class="btn btn-dark">Ver Vehículos</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
