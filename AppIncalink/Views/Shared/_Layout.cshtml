<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Inkalink/Admin</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/img/LogoInkalinkTransparente.png" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/styles.css">
   
</head>
<body>
    <div class="d-flex">
        <div class="bg-primary sidebar d-none d-lg-block col-lg-2">
            <div class="container">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center align-items-center" style="height: 100px;">
                        <img src="~/img/Inca-Link-Ecuador_SQ_White-1.png" alt="Logo" style="width: 70px;" />
                    </div>
                </div>
            </div>
            <button class="menu-toggle btn btn-primary d-md-none" onclick="toggleMenu()">☰</button>
            <div class="menu">
                <a href="@Url.Action("Index", "Home")" class="d-block p-3 text-light">
                    <i class="icon ion-md-home mr-2 lead"></i> Inicio
                </a>
                <a href="@Url.Action("Calendario", "calendario")" class="d-block p-3 text-light">
                    <i class="icon ion-md-calendar mr-2 lead"></i> Calendario
                </a>
                <a href="@Url.Action("Listar", "habitacion")" class="d-block p-3 text-light">
                    <i class="icon ion-md-planet mr-2 lead"></i> Habitaciones
                </a>
                <a href="@Url.Action("Listar", "grupo")" class="d-block p-3 text-light">
                    <i class="icon ion-md-people mr-2 lead"></i> Grupos
                </a>
                <a href="@Url.Action("Listar", "persona")" class="d-block p-3 text-light">
                    <i class="icon ion-md-person mr-2 lead"></i> Personas
                </a>
                <a href="@Url.Action("Listar", "actividad")" class="d-block p-3 text-light">
                    <i class="icon ion-logo-dribbble mr-2 lead"></i> Actividades
                </a>
                <a href="@Url.Action("Listar", "menu")" class="d-block p-3 text-light">
                    <i class="icon ion-md-pizza mr-2 lead"></i> Menus
                </a>
                <a href="" class="d-block p-3 text-light">
                    @Html.ActionLink("Salir", "CerrarSesion", "Home")
                </a>

            </div>
        </div>

        <div class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light d-lg-none">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Calendario", "calendario")">Calendario</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Listar", "habitacion")">Habitaciones</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Listar", "grupo")">Grupos</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Listar", "persona")">Personas</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Listar", "actividad")">Actividades</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Listar", "menu")">Menus</a></li>
                        <li class="nav-item"><a class="nav-link">@Html.ActionLink("Salir", "CerrarSesion", "Home")</li>
                    </ul>
                </div>
            </nav>
            <div class="w-100">
                <section class="container-fluid vh-100 overflow-auto">
                    @RenderBody()
                </section>
            </div>
        </div>
    </div>

    <!-- jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="../wwwroot/js/calendar.js"></script>
    <script>
        function toggleMenu() {
            document.querySelector('.menu').classList.toggle('d-none');
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
