@model List<recetasModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<section>
    <div class="form-row">
        <div class="form-group col-md-6">
            <a asp-action="Listar" asp-controller="menu" class="btn btn-primary" asp-route-id="id">Ver Menus</a>
        </div>
        <div class="form-group col-md-6">
            <a asp-action="Listar" asp-controller="productos" class="btn btn-success " asp-route-id="id">Ver Productos</a>
        </div>
    </div>
</section>
<a asp-action="Guardar" asp-controller="recetas" class="btn btn-success">Crear Receta</a>
<section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Menu</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Cantidad</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.idMenu</td>
                        <td>@item.idProducto</td>
                        <td>@item.cantidad</td>
                        <td>
                            <a asp-action="Editar" asp-controller="recetas" class="btn btn-primary btn-sm" asp-route-id="@item.id">Editar</a>
                        </td>
                        <td>
                            <a asp-action="Eliminar" asp-controller="recetas" class="btn btn-danger btn-sm" asp-route-id="@item.id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
