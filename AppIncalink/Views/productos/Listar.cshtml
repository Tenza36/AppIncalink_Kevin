@model List<productoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section>
    <div class="container">

        <div class="row">
            <div class="col">
                <td>
                    <a asp-action="Guardar" asp-controller="productos" class="btn btn-success"><i class="icon ion-md-nutrition mr-2 lead"></i>Crear Producto</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="recetas" class="btn btn-warning"><i class="icon ion-md-cart mr-2 lead"></i> Agregar Receta</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="menu" class="btn btn-primary"><i class="icon ion-md-pizza mr-2 lead"></i> Crear Menu</a>
                </td>
            </div>
        </div>
    </div>
</section>
<br />
<section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>

                    <th scope="col">Nombre del Producto</th>
                    <th scope="col">Tipo de Medida</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.nombre </td>
                        <td>@item.tipoMedida</td>
                        <td>
                            <a asp-action="Editar" asp-controller="productos" class="btn btn-primary btn-sm" asp-route-id="@item.id">Editar</a>
                        </td>
                        <td>
                            <a asp-action="Eliminar" asp-controller="productos" class="btn btn-danger btn-sm" asp-route-id="@item.id">Eliminar</a>
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</section>

