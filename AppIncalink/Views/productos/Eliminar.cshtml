@model productoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="d-flex justify-content-center"> Eliminar Producto </h1>
<form asp-action="Eliminar" asp-controller="productos" method="post">
    <input asp-for="id" type="hidden" class="form-control">
    <!--agregando-->

    <div class="alert alert-danger" role="alert">
        ¿Desea eliminar este Producto: @Html.DisplayTextFor(m => m.nombre)?
    </div>

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Listar" asp-controller="productos" class="btn btn-warning">Volver a la Lista</a>

</form>