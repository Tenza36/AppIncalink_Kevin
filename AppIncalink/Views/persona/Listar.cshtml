@model List<ListarPersonasNombresModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section>
    <div class="container">

        <div class="row">
            <div class="col">
                <td>
                    <a asp-action="Guardar" asp-controller="persona" class="btn btn-success"><i class="icon ion-md-person mr-2 lead"></i> Crear Persona</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="habitacion" class="btn btn-warning"><i class="icon ion-md-bed mr-2 lead"></i> Crear Habitación</a>
                </td>
            </div>
            <div class="col">
                <td>
                    <a asp-action="Listar" asp-controller="grupo" class="btn btn-info"><i class="icon ion-md-people mr-2 lead"></i> Crear Grupo</a>
                </td>
            </div>
        </div>
    </div>
</section>

<br />

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th scope="col">Nombre Completo</th>
                <th scope="col">Sexo</th>
                <th scope="col">Documento ID</th>
                <th scope="col">Correo</th>
                <th scope="col">Telefono</th>
                <th scope="col">Alergia Alimentación</th>
                <th scope="col">Alergia Varias</th>
                <th scope="col">Observaciones</th>
                <th scope="col">Grupo</th>
                <th scope="col">Habitación</th>
                <th scope="col">Rol</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.nombreCompleto</td>
                    <td>@item.nombreSexo</td>
                    <td>@item.documentoId</td>
                    <td>@item.correo</td>
                    <td>@item.telefono</td>
                    <td>@item.alergiaAlimentacion</td>
                    <td>@item.alegiaVarias</td>
                    <td>@item.observaciones</td>
                    <td>@item.nombreGrupo</td>
                    <td>@item.numeroHabitacion</td>
                    <td>@item.nombreRol</td>
                    <td>
                        <a asp-action="Editar" asp-controller="persona" class="btn btn-warning btn-sm" asp-route-id="@item.id">Editar</a>
                    </td>
                    <td>
                        <a asp-action="Eliminar" asp-controller="persona" class="btn btn-danger btn-sm" asp-route-id="@item.id">Eliminar</a>
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>


</div>


